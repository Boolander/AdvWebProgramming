<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Phone</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @addresses.each do |address| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <dt><%= address.address %></dt>
    </td>
    <td class="list_phone">
      <dl>
        <dd><%= address.phone %></dd>
      </dl>
    </td>
    <td class="list_hours">
      <dl>
        <dd><%= address.hours %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', address %><br/>
      <%= link_to 'Edit', edit_address_path(address) %><br/>
      <%= link_to 'Destroy', address, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
