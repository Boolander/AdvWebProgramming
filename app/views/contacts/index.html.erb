<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email Address</th>
      <th>Phone Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @contacts.each do |contact| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <dt><%= contact.name %></dt>
    </td>
    <td class="list_email">
      <dl>
        <dd><%= contact.email %></dd>
      </dl>
    </td>
    <td class="list_phone">
      <dl>
        <dd><%= contact.phone %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', contact %><br/>
      <%= link_to 'Edit', edit_contact_path(contact) %><br/>
      <%= link_to 'Destroy', contact, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

